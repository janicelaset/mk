<% @clues.each do |clue| %>
  <li>
    <div class="item-clue">
      <% if clue.display === true %>
        <h4><%= clue.description %></h4>
      <% else %>
        <div class="btn-clues">
          <%= link_to "CLUE ##{clue.id}", edit_clue_path(clue), remote: true,  class: "btn btn-primary btn-clue" %>
        </div>
      <% end %>
    </div>
  </li>
<% end %>
